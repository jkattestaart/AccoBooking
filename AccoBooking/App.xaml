<Application
  x:Class="AccoBooking.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:AccoBooking"
  xmlns:resources="clr-namespace:AccoBooking.Resources">

  <Application.Resources>
    <ResourceDictionary>
      <resources:AccoBookingResources x:Key="AccoBookingResources" />
      <local:AppBootstrapper x:Key="AppBootstrapper" />
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/Styles.xaml"/>
        <ResourceDictionary Source="Styles/Styles.Silverlight.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
